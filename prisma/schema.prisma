datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

model Role {
    id          Int         @id @default(autoincrement())
    name        String      @unique
    users       User[]
}

model User {
    id          Int         @id @default(autoincrement())
    name        String
    email       String      @unique
    password    String
    roleName    String
    role        Role        @relation(fields: [roleName], references: [name])
}

model Spec {
    id          Int         @id @default(autoincrement())
    name        String      @unique
    value       String
    items       Item[]
}

model Item {
    id          Int         @id @default(autoincrement())
    name        String      @unique
    price       Int
    description String?
    specs       Spec[]
}

model AuthTokenLogout {
    id          Int         @id @default(autoincrement())
    jti         String      @unique
    expiresAt   DateTime
}