datasource db {
    provider = "sqlite"
    url      = "file:../data/database.sqlite"
}

generator client {
    provider = "prisma-client-js"
    output   = "../src/generated/prisma"
}

model Role {
    id              Int             @id @default(autoincrement())
    name            String          @unique

    users           User[]
}

model User {
    id              Int             @id @default(autoincrement())
    name            String
    email           String          @unique
    password        String
    roleId          Int

    role            Role            @relation(fields: [roleId], references: [id])
}

model Spec {
    id              Int             @id @default(autoincrement())
    name            String          @unique

    baseProducts    BaseProductSpec[]
    products        ProductSpec[]
}

model BaseProduct {
    id              Int             @id @default(autoincrement())
    name            String          @unique
    description     String?

    baseSpecs       BaseProductSpec[]
    products        Product[]
}

model Product {
    id              Int             @id @default(autoincrement())
    price           Int
    stock           Int
    baseProductId   Int

    baseProduct     BaseProduct     @relation(fields: [baseProductId], references: [id])
    specs           ProductSpec[]
}

model BaseProductSpec {
    baseProductId   Int
    specId          Int
    value           String

    baseProduct     BaseProduct     @relation(fields: [baseProductId], references: [id])
    spec            Spec            @relation(fields: [specId], references: [id])

    @@id([baseProductId, specId])
}

model ProductSpec {
    productId       Int
    specId          Int
    value           String

    product         Product         @relation(fields: [productId], references: [id])
    spec            Spec            @relation(fields: [specId], references: [id])

    @@id([productId, specId])
}

model RevokedToken {
    jti             String          @id
    expiresAt       DateTime
}