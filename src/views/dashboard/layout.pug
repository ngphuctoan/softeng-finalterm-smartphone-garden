doctype html
html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")

        link(rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.5/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins")

        style.
            *:not(.badge) {
                border-radius: 0 !important;
            }

            body {
                font-family: Poppins;
            }

            iconify-icon {
                font-size: 1.5rem;
                vertical-align: -.3125rem;
            }

            #editStock .input-group {
                flex-wrap: nowrap;
                width: max-content;
            }

            #editStock .input-group .form-control {
                max-width: 5rem;
            }

        block layout-styles
    
    body.d-flex.flex-column.min-vh-100
        include partials/header

        section.d-flex.flex-fill
            include partials/sidebar

            main.container-fluid.px-4.px-lg-5.my-5
                h2.pb-2.mb-4.border-bottom #{navs[activeNav].title}

                block layout-content

