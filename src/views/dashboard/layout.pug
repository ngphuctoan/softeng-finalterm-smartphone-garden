doctype html
html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")

        link(rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.5/dist/css/bootstrap.min.css")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins")

        style.
            *:not(.badge) {
                border-radius: 0 !important;
            }

            body {
                font-family: Poppins;
            }

            iconify-icon {
                font-size: 1.5rem;
                vertical-align: -.3125rem;
            }

        block layout-styles
    body.d-flex.flex-column.min-vh-100
        include partials/header

        section.d-flex.flex-fill
            include partials/sidebar

            main
                block layout-content

        script(src="https://unpkg.com/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js")
        script(src="https://unpkg.com/iconify-icon")